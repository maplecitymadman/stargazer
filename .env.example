# Stargazer Environment Variables Example
# Copy this file to .env for local development (DO NOT commit .env!)

# ==============================================================================
# Kubernetes Configuration
# ==============================================================================

# Path to kubeconfig file (optional - defaults to ~/.kube/config)
#KUBECONFIG=/path/to/your/kubeconfig

# Kubernetes context to use (optional - defaults to current context)
#KUBECTL_CONTEXT=my-cluster-context

# Default namespace (optional - defaults to "default")
#KUBECTL_NAMESPACE=default

# ==============================================================================
# Application Settings
# ==============================================================================

# Log level: DEBUG, INFO, WARN, ERROR (default: INFO)
LOG_LEVEL=INFO

# API server port (default: 8000)
#API_PORT=8000

# Enable CORS for development (default: false)
#ENABLE_CORS=true

# Rate limit requests per second (default: 100)
#RATE_LIMIT_RPS=100

# ==============================================================================
# Cache Configuration
# ==============================================================================

# Cache TTL in seconds (default: 30)
CACHE_TTL=30

# ==============================================================================
# Storage Configuration
# ==============================================================================

# Storage directory (default: ~/.stargazer)
#STORAGE_PATH=~/.stargazer

# ==============================================================================
# Cluster Identification
# ==============================================================================

# Custom cluster name (optional - auto-detected from kubeconfig)
#CLUSTER_NAME=my-production-cluster

# ==============================================================================
# LLM Provider Configuration (Optional)
# ==============================================================================
# Note: It's recommended to configure these through the UI or config.yaml
# rather than environment variables for better security

# OpenAI
#OPENAI_API_KEY=sk-...
#OPENAI_MODEL=gpt-4

# Anthropic Claude
#ANTHROPIC_API_KEY=sk-ant-...
#ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google Gemini
#GOOGLE_API_KEY=...
#GOOGLE_MODEL=gemini-pro

# Ollama (local)
#OLLAMA_BASE_URL=http://localhost:11434
#OLLAMA_MODEL=llama2

# ==============================================================================
# Development Settings
# ==============================================================================

# Enable debug mode
#DEBUG=true

# Hot reload for development
#HOT_RELOAD=true

# Frontend development URL
#FRONTEND_URL=http://localhost:3000
